{
    "version": 0,
	"make_dead_on_current_spawner_ownership_changed_from_buff_ownership": true,
    "stacking_limit":
    {
        "stacking_limit": "fixed_one",
        "stacking_limit_met_behavior": "preserve_existing_buff"
    },
    "stacking_ownership_type": "per_player",
    "restart_other_stacked_buffs_when_started": true,
    "trigger_event_actions": [
    {
        "trigger_event_type": "on_buff_started",
        "action_group":
        {
            "actions": [
            {
                "action_type": "change_buff_memory_float_value",
                "float_variable": "planets_and_rulers_alive",
				"buff": "parent_buff",
                "math_operators": [
                {
                    "operator_type": "add",
                    "operand_value": "fixed_one"
                }]
            }]
        }
    },
    {
        "trigger_event_type": "on_buff_made_dead",
        "action_group":
        {
            "actions": [
            {
                "action_type": "change_buff_memory_float_value",
                "float_variable": "planets_and_rulers_alive",
				"buff": "parent_buff",
                "math_operators": [
                {
                    "operator_type": "subtract",
                    "operand_value": "fixed_one"
                }]
            }]
        }
    }]
}
